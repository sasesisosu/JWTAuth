<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jwtauth.assignment.dao.UserMapper">

    <!-- 회원가입 쿼리 -->
    <insert id="signup" parameterType="com.jwtauth.assignment.model.User">
        INSERT INTO users
             (user_id,
             password,
             name)
        VALUES
            (#{userId},
             #{password},
             #{name})
    </insert>

    <select id="existsById" resultType="boolean" parameterType="String">
        SELECT COUNT(*) > 0 FROM users WHERE user_id = #{userId}
    </select>

    <select id="findByUserId" resultType="com.jwtauth.assignment.model.User" parameterType="com.jwtauth.assignment.model.User">
        SELECT
            *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <update id="userModifying" parameterType="com.jwtauth.assignment.model.User">
        UPDATE users
        SET
            password = #{password},
            name = #{name}
        WHERE user_id = #{userId}
    </update>

    <delete id="userDelete" parameterType="com.jwtauth.assignment.model.User">
        DELETE FROM users
        WHERE user_id = #{userId}
    </delete>

    <select id="getUserIdx" resultType="Long" parameterType="String">
        SELECT user_idx AS userIdx
         FROM
             users
         WHERE user_id = #{userId}
    </select>
</mapper>